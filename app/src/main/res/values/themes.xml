<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Library" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="android:textColor">@color/black</item>
        <item name="itemTextColor">@color/black</item>
<!--        <item name="android:windowBackground">@color/purple_700</item>-->
<!--        lolll-->
        <item name="background">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorPrimaryVariant">@color/light_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
        <!-- Customize your theme here. -->
    </style>

<!--    dark-->

    <style name="Theme.dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000</item>
        <item name="android:textColor">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <!--        lolll-->
        <item name="background">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorPrimaryVariant">@color/light_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>